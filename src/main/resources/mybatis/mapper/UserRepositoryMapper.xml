<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.github.pinkchampagne17.channelserver.repository.UserRepository">
    <resultMap id="userMap" type="io.github.pinkchampagne17.channelserver.entity.User">
        <id column="gid" property="id"></id>
        <result column="photo_md5" property="photoMd5"></result>
        <result column="is_online" property="isOnline"></result>
        <result column="create_at" property="createAt"></result>
        <result column="update_at" property="updateAt"></result>
    </resultMap>
    <select id="getUserById" resultType="io.github.pinkchampagne17.channelserver.entity.User" resultMap="userMap" parameterType="java.lang.Long">
        select u.gid, u.email, u.password, u.name, u.bio, u.photo_md5, u.is_online, g.create_at, g.update_at, g.username
        from `user` u join `gid` g on u.gid = g.gid
        where u.gid = #{id}
    </select>
    <insert id="createGidAndUsername" useGeneratedKeys="true" keyProperty="gid" parameterType="io.github.pinkchampagne17.channelserver.parameters.CreateUserParameters">
        insert into gid(username) values(#{username})
    </insert>
    <insert id="createUserByGid" parameterType="io.github.pinkchampagne17.channelserver.parameters.CreateUserParameters">
        insert into `user`(gid, email, password, name, hash_id)
        values(#{gid}, #{email}, #{password}, #{name}, #{hashId})
    </insert>

</mapper>
